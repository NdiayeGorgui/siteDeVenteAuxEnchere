    <div id="register-div">
@if (Convert.ToInt32(Session["UtilisateurId"]) != Convert.ToInt32(Model.UtilisateurId))
        {
        <a href="~/Bien/ModifierEnchere/@Model.BienId" class="btn btn-success btn-xs"><span class="glyphicon glyphicon-credit-card"></span> Encherir sur le produit</a>
