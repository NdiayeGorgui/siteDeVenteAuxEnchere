@model IEnumerable<Vente_Aux_Enchere_Site.Models.Enchere>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Mes enchères réalisées: @ViewBag.nombre_enchere </h2>




<br/>
<table class="table table-responsive table-striped ">
    <thead class="table-heading">
        <tr>


            <th>
                Date Enchere
            </th>
            <th>
                Produit
            </th>
            <th>
                Image du Produit
            </th>
            <th>
                Prix Proposé
            </th>

           
            @*<th>
                Enchere
            </th>

            <th>
               Meilleur Prix
            </th>*@
        </tr>

    </thead>
    @foreach (var item in Model)
    {
        <tbody>
            <tr>
                <td>
                    @item.DateEnchere
                </td>
                <td>
                    @item.Bien.Designation
                </td>
                <td>
                    <img src="@item.Bien.URL_Photo/@item.Bien.Photo " width="100" height="80" />
                </td>
                <td>
                    @item.PrixActuel
                </td>
               
                
                @*<td>
                    
                </td>
                @ViewBag.maxprice 
                <td>
                    
                </td>*@
            </tr>

        </tbody>
    }

</table>
