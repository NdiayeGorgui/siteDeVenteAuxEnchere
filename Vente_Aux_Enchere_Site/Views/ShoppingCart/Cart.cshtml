
@using Vente_Aux_Enchere_Site.Controllers
@{
    ViewBag.Title = "Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Mon Panier</h2>

<table class="table">
    <tr>
        <th>
            
        </th>

        <th>
            ID
        </th>


        <th>
            PRODUIT
        </th>
        <th>IMAGE</th>
        <th>
            PRIX
        </th>
        <th>
            Quatité
        </th>

        <th> TOTAL</th>
    </tr>
    @{double s=0;}

    @foreach (Item item in (List<Item>)Session["cart"])
    {
        s = s + item.Pr.PrixInitial * item.Quantite;
        <tr>
            <td>
                @Html.ActionLink("Supprimer", "Delete", "ShoppingCart", new  { id=item.Pr.BienId},null)
            </td>
            <td>
                @item.Pr.BienId
            </td>

            <td>
                @item.Pr.Designation
            </td>
            <td>
                <img src="@item.Pr.URL_Photo/@item.Pr.Photo " width="100" height="80" />
            </td>
            <td>
               $ @item.Pr.PrixInitial
            </td>

            <td>
                @item.Quantite
            </td>
            <td>
               $ @(item.Pr.PrixInitial * item.Quantite)
            </td>
        </tr>
    
    }
    <tr>
        <th colspan="6" align="center">Montant Total</th>
        <th >$ @s</th>
    </tr>
</table>

@Html.ActionLink("Continuer", "Index", "Produit") 
